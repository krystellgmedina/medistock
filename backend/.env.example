#--------------------------------------------------------------------
# Example Environment Configuration file
#--------------------------------------------------------------------

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------
CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------
app.baseURL = 'http://localhost:8080'
app.indexPage = ''
app.defaultLocale = 'es'

#--------------------------------------------------------------------
# DATABASE (Local)
#--------------------------------------------------------------------
database.default.hostname = localhost
database.default.database = medistock
database.default.username = postgres
database.default.password = your_password
database.default.DBDriver = Postgre
database.default.port = 5432

# DATABASE (Railway / Heroku style)
# Railway proporciona una variable DATABASE_URL en formato:
#   postgres://user:password@host:port/database
# Si vas a usar Railway, comenta las líneas de DB individuales y añade:
# DATABASE_URL = "postgres://user:pass@host:5432/dbname"
#
# En producción (Railway) renombra .env.example a .env o configura Railway vars

#--------------------------------------------------------------------
# SECURITY
#--------------------------------------------------------------------
security.csrfProtection = true
security.tokenName = 'csrf_token_name'
security.cookieName = 'csrf_cookie_name'
# CodeIgniter 4 example .env (rename to .env and edit values)
CI_ENVIRONMENT = development
app.baseURL = 'http://localhost:8080/'

# Database (PostgreSQL)
database.default.DBDriver = Postgre
database.default.hostname = 127.0.0.1
database.default.port = 5432
database.default.database = medistock
database.default.username = medistock_user
database.default.password = your_db_password
database.default.DBPrefix =

# Other recommended settings
app.ENVIRONMENT = development
app.debug = true

# Mail / other settings: adjust as needed
